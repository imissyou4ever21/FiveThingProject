<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fivethingproject.lebron"
    android:focusable="false">

    <ImageView
        android:src="@drawable/lebron"
        android:id="@+id/lebron"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namelebron"
        android:gravity="center"
        android:padding="8dp"
        android:text="Name: LeBron James"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/lebron"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Team: Cleveland Cavaliers"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/teamlebron"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/namelebron" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Position: Small forward"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/positionlebron"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teamlebron" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Number: 23"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/numberlebron"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/positionlebron" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/lebronnext"
        android:onClick="lebronnext"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lebron"
        android:layout_alignEnd="@+id/lebron" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/lebronback"
        android:onClick="lebronback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="more"
        android:id="@+id/lebronmore"
        android:onClick="lebronmore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
