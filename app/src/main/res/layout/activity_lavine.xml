<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fivethingproject.lavine"
    android:focusable="false">

    <ImageView
        android:src="@drawable/lavine"
        android:id="@+id/lavine"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/namelavine"
        android:layout_alignEnd="@+id/namelavine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namelavine"
        android:gravity="center"
        android:padding="8dp"
        android:text="Name: Zach Lavine"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/lavine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Team: Minnesota Timberwolves"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/teamlavine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/namelavine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Position: Shooting guard"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/positionlavine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teamlavine" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Number: 8"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/numberlavine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/positionlavine" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:id="@+id/lavinenext"
        android:onClick="lavinenext"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lavine"
        android:layout_alignEnd="@+id/lavine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/lavineback"
        android:onClick="lavineback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

