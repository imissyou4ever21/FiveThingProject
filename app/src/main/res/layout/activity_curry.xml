<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fivethingproject.curry"
    android:focusable="false">

    <ImageView
    android:src="@drawable/curry"
    android:id="@+id/curry"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:scaleType="fitStart"
    android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/namecurry"
        android:gravity="center"
        android:padding="8dp"
        android:text="Name: Stephen Curry"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/curry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Team: Golden State Warriors"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/teamcurry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/namecurry" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Position: Point guard"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/positioncurry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teamcurry" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:text="Number: 30"
        android:fontFamily="sans-serif-medium"
        android:textColor="#000000"
        android:textSize="20dp"
        android:id="@+id/numbercurry"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/positioncurry" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/currynext"
        android:onClick="currynext"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/numbercurry"
        android:layout_alignEnd="@+id/numbercurry" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="back"
        android:id="@+id/curryback"
        android:onClick="curryback"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="more"
        android:id="@+id/currymore"
        android:onClick="currymore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
